---
import NextJs from './icons/Next.astro';
import Tailwind from './icons/Tailwind.astro';
import JavaScript from './icons/JavaScript.astro';
import Sass from './icons/Sass.astro';

const TAGS = {
  NEXT: {
    name: 'Next.js',
    class: 'bg-black text-white',
    icon: NextJs,
  },
  TAILWIND: {
    name: 'Tailwind CSS',
    class: 'bg-[#003159] text-white',
    icon: Tailwind,
  },

  REACT: {
    name: 'React',
    class: 'bg-blue-500 text-white',
    icon: NextJs,
  },

  JAVASCRIPT: {
    name: 'JavaScript',
    class: 'bg-yellow-500/60 text-white',
    icon: JavaScript,
  },

  SASS: {
    name: 'Sass',
    class: 'bg-pink-400/30 text-white',
    icon: Sass,
  },
};
const PROJECTS = [
  {
    title: 'SVGL - A beatiful library with SVG icons',
    description:
      'Created from scratch with Next.js and Tailwind CSS, SVGL is a library with a lot of SVG icons that you can use in your projects. It is also open source and you can contribute to it. Optimized for performance and SEO.',
    link: 'https://svgl.vercel.app/',
    github: 'https://github.com/pheralb/svgl',
    image: '/projects/svgl.webp',
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.REACT],
  },
  {
    title: 'Developer Week Project',
    description:
      'This is my capstone project about developerWeek wich is the largest developer conference & event series including the DeveloperWeek 2023 Conference & Expo, 1,000+ attendee hackathon, 800+ attendee tech hiring expo, and a series of workshops, technical talks, and keynotes.',
    link: 'https://sparktan24.github.io/Page-web-development-course/index.html',
    github: 'https://github.com/Sparktan24/Page-web-development-course',
    image: '/projects/Project-Page.webp',
    tags: [TAGS.JAVASCRIPT, TAGS.SASS],
  },
];
---

{
  PROJECTS.map(({ title, description, link, github, image, tags }) => (
    <article class="mb-16">
      <h3 class="text-2xl font-semibold text-yellow-200/80 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li class="cursor-default">
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <a href={link}>
        <img
          class="rounded shadow-2xl shadow-white/10"
          src={image}
          alt={`Screenshot of the project ${title}`}
        />
      </a>
    </article>
  ))
}
