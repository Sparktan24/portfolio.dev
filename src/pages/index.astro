---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Badge from '../components/Badge.astro';
import SectionContainer from '../components/SectionContainer.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import GitHubIcon from '../components/icons/GitHub.astro';
import MailIcon from '../components/icons/Mail.astro';
import BriefcaseIcon from '../components/icons/Briefcase.astro';
import SocialPill from '../components/SocialPill.astro';
import Experience from '../components/Experience.astro';
---

<Layout
  title="Jesus' Portfolio - Software Developer"
  description="If you like what you see and you need help with a project, don't hestiate and contact me"
>
  <main class="text-white">
    <SectionContainer class="py-44 pb-24">
      <img
        class="rounded-full size-12 mb-4"
        src="https://avatars.githubusercontent.com/u/25826025?v=4"
        alt="photo"
      />
      <h1 class="text-5xl font-bold flex flex-row gap-x-4 pb-10">
        Hi, im Jesus
        <a
          href="https://www.linkedin.com/in/jesus-molina-e/"
          target="_blank"
          rel="noopener"
          class="flex items-center"
        >
          <Badge>Available</Badge>
        </a>
      </h1>
      <h2 class="text-2xl opacity-80 text-wrap">
        <span class="opacity-80 text-yellow-200/90"
          >I'm a Software Developer</span
        >. I can help you build a product , feature or website Look through some
        of my work and experience! If you like what you see and have a project
        you need coded, don't hestiate to contact me.
      </h2>

      <nav class="flex gap-x-4 mt-8">
        <SocialPill href="https://www.linkedin.com/in/jesus-molina-e/">
          <LinkedInIcon class="size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/Sparktan24">
          <GitHubIcon class="size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="Mail">
          <MailIcon class="size-6" />
          jesus.molina.e90@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experience">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <BriefcaseIcon class="size-7" />
        Experience
      </h2>
      <Experience />
    </SectionContainer>
  </main>
</Layout>
